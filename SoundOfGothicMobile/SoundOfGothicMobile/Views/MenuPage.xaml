             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoundOfGothicMobile.Views.MenuPage"
             Title="Menu">
    <StackLayout VerticalOptions="FillAndExpand"  BackgroundColor="{StaticResource NavigationPrimary}">
